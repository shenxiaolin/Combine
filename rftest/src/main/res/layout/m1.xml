<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_snr"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/textView_snr"
        android:text="snr" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignLeft="@+id/textView_snr"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textView_snr"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp" >

    </ListView>

    <EditText
        android:id="@+id/editText_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_read"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_data"
        android:layout_marginLeft="10dp"
        android:text="Read" />

    <Button
        android:id="@+id/button_write"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/editText_data"
        android:layout_toRightOf="@+id/button_read"
        android:text="Write" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_read"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button_read"
        android:text="hint" />

</RelativeLayout>
