<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/right_hand"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/left_hand_bg">

    <Button
        android:id="@+id/left_little_finger_bt"
        style="@style/FingerStyle"
        android:layout_gravity="left|top"
        android:layout_marginLeft="203dip"
        android:layout_marginStart="203dp"
        android:layout_marginTop="63dip"
        android:background="#cc99cc"
        android:rotation="-40"/>

    <Button
        android:id="@+id/left_ring_finger_bt"
        style="@style/FingerStyle"
        android:layout_marginLeft="230dip"
        android:layout_marginStart="230dip"
        android:layout_marginTop="25dip"
        android:background="#cc9933"
        android:rotation="-10"/>

    <Button
        android:id="@+id/left_middle_finger_bt"
        style="@style/FingerStyle"
        android:layout_marginLeft="275dip"
        android:layout_marginStart="275dip"
        android:layout_marginTop="15dip"
        android:background="#336699"
        android:rotation="0"/>

    <Button
        android:id="@+id/left_index_finger_bt"
        style="@style/FingerStyle"
        android:layout_marginLeft="320dip"
        android:layout_marginStart="320dip"
        android:layout_marginTop="25dip"
        android:background="#ffff66"
        android:rotation="25"/>

    <Button
        android:id="@+id/left_thumb_bt"
        style="@style/FingerStyle"
        android:layout_marginLeft="355dip"
        android:layout_marginStart="355dip"
        android:layout_marginTop="108dip"
        android:background="#99ccff"
        android:rotation="50"/>

</FrameLayout>