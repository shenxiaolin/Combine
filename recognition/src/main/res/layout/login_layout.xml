<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/main_green_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_name_margin_top"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/password_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_name"
            android:layout_alignStart="@+id/editText_name"
            android:src="@mipmap/name"/>

        <EditText
            android:id="@+id/editText_name"
            style="@style/LoginBoxStyle"
            android:layout_below="@id/password_img"
            android:imeOptions="actionNext|flagNoFullscreen"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:text="userc"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_psw"
            android:src="@mipmap/password"/>

        <EditText
            android:id="@+id/editText_psw"
            style="@style/LoginBoxStyle"
            android:layout_below="@id/user_img"
            android:imeOptions="actionDone|flagNoFullscreen"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="123"/>
    </RelativeLayout>

    <Button
        android:id="@+id/login_bt"
        style="@style/CommonTextStyle"
        android:layout_width="@dimen/login_bt_width"
        android:layout_height="@dimen/login_bt_height"
        android:layout_below="@+id/password"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/login_bt_margin_side"
        android:layout_marginLeft="@dimen/login_bt_margin_side"
        android:layout_marginRight="@dimen/login_bt_margin_side"
        android:layout_marginStart="@dimen/login_bt_margin_side"
        android:layout_marginTop="@dimen/login_bt_margin_side"
        android:background="@drawable/login_bt_bg"/>

    <TextView
        style="@style/CommonTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_size_20"
        android:gravity="center"
        android:text="@string/web_url"/>

</RelativeLayout>