<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/main_green_bg"
              android:orientation="vertical">

    <SurfaceView
        android:id="@+id/fingerprint_SurfaceView"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/take_fingerprint_bt"
        android:layout_width="60dp"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:background="@mipmap/camera_click"
        android:layout_marginBottom="@dimen/dp_size_10"
        android:src="@mipmap/camera_bt"/>

</LinearLayout>