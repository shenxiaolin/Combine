<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_color">

    <ImageButton
        android:id="@+id/bottom_left_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/bottom_bar_margin_left_right"
        android:layout_marginStart="@dimen/bottom_bar_margin_left_right"
        android:background="@drawable/common_back_bg"/>

    <ImageButton
        android:id="@+id/bottom_middle_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_take_photo"/>

    <ImageButton
        android:id="@+id/bottom_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/bottom_bar_margin_left_right"
        android:layout_marginRight="@dimen/bottom_bar_margin_left_right"
        android:background="@drawable/common_right_bg"/>
</RelativeLayout>