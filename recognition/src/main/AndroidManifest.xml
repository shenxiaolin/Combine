<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.xiongdi.recognition"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".application.RecognitionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 登录界面 -->
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="sensor"/>

        <!-- 填写录入信息界面-->
        <activity
            android:name=".activity.FillInfoActivity"
            android:screenOrientation="sensor"/>

        <!-- 选择采集指纹还是照片的界面-->
        <activity
            android:name=".activity.GatherActivity"
            android:screenOrientation="sensor"/>

        <!-- 采集指纹的界面-->
        <activity
            android:name=".activity.GatherFingerprintActivity"
            android:screenOrientation="sensor"/>

        <!-- 采集照片的界面-->
        <activity
            android:name=".activity.GatherPictureActivity"
            android:screenOrientation="sensor"/>

        <!-- 读写卡界面-->
        <activity android:name=".activity.OperateM1CardActivity"/>

        <!-- 验证结果界面-->
        <activity
            android:name=".activity.VerifyResultActivity"
            android:screenOrientation="sensor"/>

        <!-- 验证指纹界面-->
        <activity
            android:name=".activity.VerifyActivity"
            android:screenOrientation="sensor"/>

    </application>

</manifest>
