<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/pop_chick"
    android:orientation="vertical"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="16dip" >

    <TextView
        android:id="@+id/text_dialog_title"
        style="@style/dialog_title_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="14dip"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/text_dialog_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        style="@style/dialog_listview_common"
        
        />

    <TextView
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#C0C0C0" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="@dimen/dialog_button_height" 
        android:orientation="horizontal" >

        <Button
            android:id="@+id/text_dialog_button_cancel"
            style="@style/dialog_button_common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#C0C0C0" />

        <Button
            android:id="@+id/text_dialog_button_ok"
            style="@style/dialog_button_common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>