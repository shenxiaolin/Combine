<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


 <TabHost android:layout_width="fill_parent" android:layout_height="fill_parent">
     
 　　<RelativeLayout android:id="@+id/tab01" 
	     		   android:orientation="vertical"     
				   android:background="@drawable/lefthand_bg"
				   android:layout_width="fill_parent" android:layout_height="wrap_content">
        
 
        <Button
            android:id="@+id/bt_left1"
            android:layout_width="37px"
            android:layout_height="90px"
            android:layout_marginLeft="38dip"
            android:layout_marginTop="160dip"
            android:background="@drawable/finger_bg"
            android:rotation="-40" />

        <Button
            android:id="@+id/bt_left2"
            android:layout_width="37px"
            android:layout_height="90px"
            android:layout_marginLeft="86dip"
            android:layout_marginTop="44dip"
            android:background="@drawable/finger_bg"
            android:rotation="-20" />

        <Button
            android:id="@+id/bt_left3"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="148dip"
            android:layout_marginTop="26dip"
            android:background="@drawable/finger_bg" />

        <Button
            android:id="@+id/bt_left4"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="208dip"
            android:layout_marginTop="40dip"
            android:background="@drawable/finger_bg"
            android:rotation="16" />

        <Button
            android:id="@+id/bt_left5"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="244dip"
            android:layout_marginTop="90dip"
            android:background="@drawable/finger_bg"
            android:rotation="28" />
     
				 
 
 　　</RelativeLayout>
 
 　　　　
      　　<RelativeLayout android:id="@+id/tab02" 
	     		   android:orientation="vertical"     
				   android:background="@drawable/righthand_bg"
				   android:layout_width="fill_parent" android:layout_height="wrap_content">
     

        <Button
            android:id="@+id/bt_right1"
            android:layout_width="37px"
            android:layout_height="90px"
            android:layout_marginLeft="238dip"
            android:layout_marginTop="160dip"
            android:background="@drawable/finger_bg" 
            android:rotation="40" />

        <Button
            android:id="@+id/bt_right2"
            android:layout_width="37px"
            android:layout_height="90px"
            android:layout_marginLeft="194dip"
            android:layout_marginTop="40dip"
            android:background="@drawable/finger_bg" 
            android:rotation="20" />

        <Button
            android:id="@+id/bt_right3"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="128dip"
            android:layout_marginTop="26dip"
            android:background="@drawable/finger_bg" 
            />

        <Button
            android:id="@+id/bt_right4"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="68dip"
            android:layout_marginTop="40dip"
            android:background="@drawable/finger_bg" 
            android:rotation="-16" />

        <Button
            android:id="@+id/bt_right5"
            android:layout_width="37px"
            android:layout_height="110px"
            android:layout_marginLeft="32dip"
            android:layout_marginTop="90dip"
            android:background="@drawable/finger_bg" 
            android:rotation="-28" />
 
      
 　　</RelativeLayout>
        
      
       　　<RelativeLayout android:id="@+id/tab03"  
	     		   android:orientation="vertical"     
				   android:background="#000000" android:layout_marginBottom="60dip"
				   android:layout_width="fill_parent" android:layout_height="wrap_content">
           
           		<ImageView 
		            android:id="@+id/gf_img"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/pic_man"
		            android:layout_centerInParent="true"
		            android:scaleType="fitCenter"
               />
      
      </RelativeLayout>
 </TabHost>

        <LinearLayout
            android:layout_width="match_parent" 
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >
      　　
            <Button
                android:id="@+id/gather_finger_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button_common3"
                android:drawableTop="@drawable/buttonicon_back" />
            <Button
                android:id="@+id/gather_finger_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button_common3"
                android:drawableTop="@drawable/buttonicon_person" />
            <Button
                android:id="@+id/gather_finger_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_button_common3"
                android:drawableTop="@drawable/buttonicon_save" />
            
        </LinearLayout>

</RelativeLayout>