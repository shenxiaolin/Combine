<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--四个卡槽的样式-->
    <style name="PSAMSerialNumberStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@drawable/rect_round_green_bg</item>
    </style>

    <!--设置卡槽参数时选项标题的样式-->
    <style name="setParamsDialogTextStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/psam_test_option_title_font_size</item>
    </style>

    <style name="setParamsDialogSpinnerStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/psam_test_option_spinner_font_size</item>
    </style>
</resources>
