<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_slot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Slot:"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textview_baudrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Baut:"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textview_voltage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Volt:"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinner_slot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinner_baut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinner_volt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reset"
        android:text="Reset"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATR1:"
            />

        <TextView
            android:id="@+id/textview_ATR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATR2:"
            />

        <TextView
            android:id="@+id/textview_ATR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATR3:"
            />

        <TextView
            android:id="@+id/textview_ATR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATR4:"
            />

        <TextView
            android:id="@+id/textview_ATR4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_apdu"
        android:text="APDU"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APDU1:"
            />

        <TextView
            android:id="@+id/textview_APDU1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APDU2:"
            />

        <TextView
            android:id="@+id/textview_APDU2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APDU3:"
            />

        <TextView
            android:id="@+id/textview_APDU3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APDU4:"
            />

        <TextView
            android:id="@+id/textview_APDU4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please reset the card"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_exit"
        android:text="Exit"
        />
</LinearLayout>