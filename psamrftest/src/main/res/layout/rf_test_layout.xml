<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">

    <RadioGroup
        android:id="@+id/aerial_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/inner_aerial_radio_bt"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/inner_aerial_radio_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inner_aerial"
            android:textSize="28sp"/>

        <RadioButton
            android:id="@+id/out_aerial_radio_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_aerial"
            android:textSize="28sp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/test_count_title"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/cycle_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="10"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/card_type"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/card_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray"
            android:gravity="center"
            android:textSize="24sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/card_serial_number"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/card_serial_number_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray"
            android:gravity="center"
            android:textSize="24sp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/m1_card_test_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/test_result"
            android:textSize="30sp"/>

        <ProgressBar
            android:id="@+id/m1_card_test_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/start_test_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_button_bg"
            android:padding="10dp"
            android:text="@string/start_test"
            android:textColor="@color/white"
            android:textSize="29sp"/>

        <Button
            android:id="@+id/stop_test_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/common_button_bg"
            android:padding="10dp"
            android:text="@string/stop_test"
            android:textColor="@color/white"
            android:textSize="29sp"/>
    </LinearLayout>


</LinearLayout>